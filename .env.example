# When adding additional environment variables, the schema in "/src/env.mjs"
# should be updated accordingly.

# Prisma
DATABASE_URL=mongodb://localhost:27017/spotiparty

# Next Auth
NEXTAUTH_URL=http://localhost:3000
# you can generetae one with: openssl rand -base64 32
NEXTAUTH_SECRET=<jwt-secret>

# Next Auth Providers
# Spotify keys retrieved from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Google keys retrieved from https://console.developers.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Pusher
# Values retrieved from https://dashboard.pusher.com/apps/<PUSHER_APP_ID>/keys
PUSHER_APP_ID=
NEXT_PUBLIC_PUSHER_KEY=
PUSHER_SECRET=
NEXT_PUBLIC_PUSHER_CLUSTER=
PUSHER_LOGS_ENABLED=true

# Cloudinary
# Values retrieved from https://cloudinary.com/console
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_ROOT_FOLDER=spotiparty